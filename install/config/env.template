# إعدادات التطبيق الأساسية
NODE_ENV=production
PORT=5000
APP_URL=https://your-domain.com
APP_SECRET=change_this_to_a_secure_random_string

# إعدادات قاعدة البيانات MySQL (لاستضافة Hostinger)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_NAME=your_mysql_database

# إعدادات جلسات المستخدمين
SESSION_SECRET=change_this_to_another_secure_random_string
SESSION_LIFETIME=86400000

# مجلدات التخزين
UPLOAD_DIR=./uploads
LOGS_DIR=./logs
TEMP_DIR=./temp

# إعدادات البريد الإلكتروني (اختياري)
# SMTP_HOST=mail.your-domain.com
# SMTP_PORT=587
# SMTP_USER=noreply@your-domain.com
# SMTP_PASS=your_email_password
# SMTP_FROM=Certificate System <noreply@your-domain.com>

# إعدادات المصادقة الاجتماعية (اختياري)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# FACEBOOK_APP_ID=your_facebook_app_id
# FACEBOOK_APP_SECRET=your_facebook_app_secret
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# إعدادات التحويل ورفع الملفات
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,svg
CERTIFICATE_IMAGE_QUALITY=90

# إعدادات الأمان
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
ENABLE_HELMET=true
ENABLE_XSS_PROTECTION=true
ENABLE_CORS=true
CORS_ORIGIN=*

# إعدادات التسجيل والتصحيح
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# إعدادات متقدمة
# عادةً لا تحتاج إلى تغيير هذه القيم
NODE_OPTIONS=--max-old-space-size=512